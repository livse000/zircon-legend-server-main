<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 皓石传奇三管理后台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 250px;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
            padding-top: 0;
            z-index: 100;
        }
        .sidebar-brand {
            padding: 1rem;
            background: rgba(0,0,0,0.2);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .sidebar-brand h5 {
            color: #fff;
            margin: 0;
            font-weight: 600;
        }
        .sidebar-brand small {
            color: rgba(255,255,255,0.5);
            font-size: 0.75rem;
        }
        .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 0.75rem 1rem;
            border-left: 3px solid transparent;
            transition: all 0.2s;
        }
        .nav-link:hover {
            color: #fff;
            background: rgba(255,255,255,0.1);
            border-left-color: #0d6efd;
        }
        .nav-link.active {
            color: #fff;
            background: rgba(13,110,253,0.2);
            border-left-color: #0d6efd;
        }
        .nav-link i {
            margin-right: 0.5rem;
            width: 20px;
            text-align: center;
        }
        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
            background: #f8f9fa;
        }
        .top-navbar {
            background: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 0.75rem 1.5rem;
        }
        .content-wrapper {
            padding: 1.5rem;
        }
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }
        .card-header {
            background: #fff;
            border-bottom: 1px solid #eee;
            font-weight: 600;
        }
        .stat-card {
            border-left: 4px solid;
        }
        .stat-card.primary { border-left-color: #0d6efd; }
        .stat-card.success { border-left-color: #198754; }
        .stat-card.warning { border-left-color: #ffc107; }
        .stat-card.danger { border-left-color: #dc3545; }
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
        }
        .stat-label {
            color: #6c757d;
            font-size: 0.875rem;
        }
        .nav-section {
            padding: 0.5rem 1rem;
            color: rgba(255,255,255,0.4);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 1rem;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <h5><i class="bi bi-shield-lock-fill me-2"></i>皓石传奇三</h5>
                <small>管理后台</small>
            </div>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")" href="/Dashboard">
                        <i class="bi bi-speedometer2"></i>仪表盘
                    </a>
                </li>

                <li class="nav-section">玩家管理</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Players" ? "active" : "")" href="/Players">
                        <i class="bi bi-people"></i>在线玩家
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Accounts" ? "active" : "")" href="/Accounts">
                        <i class="bi bi-person-badge"></i>账户管理
                    </a>
                </li>

                <li class="nav-section">游戏管理</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Items" ? "active" : "")" href="/Items">
                        <i class="bi bi-box-seam"></i>物品管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Maps" ? "active" : "")" href="/Maps">
                        <i class="bi bi-map"></i>地图管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Monsters" ? "active" : "")" href="/Monsters">
                        <i class="bi bi-bug"></i>怪物管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Npcs" ? "active" : "")" href="/Npcs">
                        <i class="bi bi-person-standing"></i>NPC管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Skills" ? "active" : "")" href="/Skills">
                        <i class="bi bi-lightning"></i>技能管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Classes" ? "active" : "")" href="/Classes">
                        <i class="bi bi-person-badge"></i>职业管理
                    </a>
                </li>

                <li class="nav-section">系统</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "System" ? "active" : "")" href="/System">
                        <i class="bi bi-gear"></i>系统管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Settings" ? "active" : "")" href="/Settings">
                        <i class="bi bi-sliders"></i>配置管理
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <div class="top-navbar d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="d-flex align-items-center">
                    <span class="me-3 text-muted">
                        <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
                    </span>
                    <a href="/Logout" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-right"></i> 退出
                    </a>
                </div>
            </div>
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin-ajax.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
